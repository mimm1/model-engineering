rule Attribute2Attribute{
	from
		a: swml!Attribute
	
	to
		out: smvcml!Attribute(
			
			name <- a.name
		
				
	)
}

rule Attribute2Relationship{
	from
		
		r: swml!Relationship
	to
		out: smvcml!Attribute(
			
			
			name <- r.name
						
	)
}
