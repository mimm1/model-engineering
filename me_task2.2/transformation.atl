rule WebApplication2SMVCApplication{
	from
		w: swml!WebApplication,
		c: swml!ContentModel
		
	to
		out: smvcml!SMVCApplication(
			name <- w.name,	
			entities <- c.entityType,
			daos <- c.entityType
		)
	
}




rule EntityType2Entity{
	from
